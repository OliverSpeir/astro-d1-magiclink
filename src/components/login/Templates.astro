<template id="form-submitted-template">
  <div aria-live="polite" role="status">
    <span data-message></span>
    <span data-email></span>
  </div>
  <section>
    <div class="post-actions">
      <div data-create-account-container></div>
      <form method="POST">
        <input type="hidden" name="email" data-email-input />
        <input type="hidden" name="formType" value="resend" />
        <button type="submit" id="resend-btn">Resend Link</button>
      </form>
    </div>
    <div id="additional-options">
      <form method="POST">
        <input type="hidden" name="formType" value="clearEmail" />
        <button type="submit">Use a different email</button>
      </form>
    </div>
  </section>
</template>

<template id="create-account-template">
  <form method="POST">
    <input type="hidden" name="email" data-email-input />
    <input type="hidden" name="formType" value="signup" />
    <button type="submit">Create Account</button>
  </form>
</template>
